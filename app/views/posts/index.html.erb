<% @posts.each do |post| %>
  <div class="post_wrapper">
    <h2 class="title"><%= link_to post.title, post %></h2>
    <p class="body"><%= truncate(strip_tags(post.body), length:100) %> </p>
    <p class="date"> Submitted by <%= post.user.username %> <%= time_ago_in_words(post.created_at) %> ago </p>
    <%= link_to like_post_path(post), method: :put do %>
        <span> <i class="fa fa-heart" aria-hidden="true"></i> <%= post.get_upvotes.size %></span>
    <% end %>
    <span> <i class="fa fa-comments" aria-hidden="true"> </i> <%= post.comments.size %></span>
  </div>
<% end %>